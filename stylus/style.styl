@import "normalize.styl"
@import "owl.carousel.styl"
@import "owl.theme.styl"
@import "animate.styl"
azulPrincipal = #1E4354
azulSemiClaro = #126085
azulClaro  = #D1F3FD
azulBanner = #53A0CF

html
body
	color #797777
	height 100%
.ContenedorImagen
	top 0
	z-index -1
	background-size: 100% 100%;
	width: 100%;
	height 100%
	&-img
		background-repeat: no-repeat;
		background-size: 100% 100%;
		width: 100%;
		height 100%
.ContenedorPrincipal
	position relative
	width 100%
	text-align: center;
	height auto
	overflow hidden
	height 100%
	&-logo
		position absolute
		margin 0
		padding 0
		z-index 1
		top 0
		right 0
		&Img
			display inline-block
			width 150px
	&-menu
		position fixed
		text-align center
		display inline-block
		right 0
		padding 0
		background #fff
		width 100%
		height 100%
		transition  all 1s ease-in-out
		top 0
		display none
		z-index 5
		&Ul
			padding 0
			margin 0
			list-style none
			text-align center
			top 30%
			position relative
		&Item
			margin 0
			border-left 0.8em solid azulPrincipal
			a
				text-decoration none
				cursor pointer
				color azulPrincipal
				text-transform: uppercase
				padding 1em 0
				display inherit
	&-banner
		width 100%
		position absolute
		left 0
		bottom 0
		z-index 1
	&-bannerlema
		img
			border: 0;
			width: 100%;
			max-width 500px	
	&-bannerLinea
		width 100%
		height .5em
		background-color azulSemiClaro
		position absolute
		top 55%
		z-index -1
	.menu-movil
		display inline-block
		position absolute
		color azulPrincipal
		padding 1em 0 0 1em
		cursor pointer
		transition all 0.5s ease-in-out
		top 0
		left 0
		.col
			height 3px
			width 26px
			margin-bottom 7px
			background-color azulPrincipal
			display block
.SliderPrincipal
	background-color azulClaro
	.owl-carousel
		text-align center
	&-item
		margin: 2em 0;
		display inline-block
		max-height: 500px;
		background white
		box-shadow: 0 6px 20px #AFAFAF
		padding 0 1.5em
	&-titulo
		font-size 2em
		color azulPrincipal
		line-height: 0.9em;
	&-p
		font-size 1.3em
	&-link
		font-size 1.3em
		color azulBanner
		text-decoration none
		font-weight bold
.FrasesMotivacion
	background-color azulBanner
	font-size 1.2em
	position: relative;
	top: -10px;
	padding-top: 2em;
	&-item
		margin 0
	&-titulo
		color white
		font-style italic
		font-weight: lighter;
		text-align center
	&-author
		color white
		font-style italic
		font-weight: normal;
		text-align right
.Contenedor-noticias
	position relative
	background-color azulClaro           
	.Contenedor-mujer
		width 100%
		.Contenedor-mujerc
			display inline-block
			margin 0
			padding 0
			width 100%
			.Contenedor-mujercImg
				width 100%
		.Contenedor-caja
			position absolute
			display inline-block
			margin 0
			padding 0
			width 320px
			top 0
			.Contenedor-cajaImg
				width 100%
	.SliderSecundario
		.SliderSecundario-item
			background white
			padding: 1em;
.Footer
	background-color azulSemiClaro
	&-logo
		margin 0
		padding 0
		width 150px
		&Img
			width 100%
		
    		
		
			
			
			
		
