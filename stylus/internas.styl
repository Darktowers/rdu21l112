@import "normalize.styl"
@import "owl.carousel.styl"
@import "owl.theme.styl"
@import "animate.styl"
@import "nib"
@import "nib/vendor"
azulPrincipal = #1E4354
azulSemiClaro = #126085
azulClaro  = #D1F3FD
azulBanner = #53A0CF
vendor-prefixes = o ms moz webkit official
html
body
	color #797777
	height 100%
.ContenedorImagen
	margin: 0;
	padding: 0;
	z-index: 1;
	&-img
		background-repeat: no-repeat;
		background-size: 100% 100%;
		width: 100%;
		height 100%
.ContenedorPrincipal
	position relative
	width 100%
	text-align: center;
	height auto
	overflow hidden
	height 400px
	&-logo
		position absolute
		margin 0
		padding 0
		z-index 1
		top 0
		left 0 !important
		&Img
			display inline-block
			width 150px
	&-menu
		position fixed
		text-align center
		display inline-block
		right 0
		padding 0
		background #fff
		width 100%
		height 100%
		transition  all 1s ease-in-out
		top 0
		display none
		z-index 5
		&Ul
			padding 0
			margin 0
			list-style none
			text-align center
			top 30%
			position relative
		&Item
			margin 0
			border-left 0.8em solid azulPrincipal
			a
				text-decoration none
				cursor pointer
				color azulPrincipal
				text-transform uppercase
				padding 1em 0
				display inherit
	&-banner
		width 100%
		position absolute
		left 0
		top 0
		z-index 1
	&-bannerlema
		position: relative;
		top: -3em;
		img
			border 0
			width 100%
			max-width 500px	
	&-bannerLinea
		width 100%
		height .5em
		background-color azulSemiClaro
		position absolute
		top 0
		z-index -1
	.menu-movil
		display inline-block
		position absolute
		color azulPrincipal
		padding 1em 0 0 1em
		cursor pointer
		transition all 0.5s ease-in-out
		top 0
		left 0
		.col
			height 3px
			width 26px
			margin-bottom 7px
			background-color azulPrincipal
			display block
.SliderPrincipal
	background-color #fff
	height 700px
	box-shadow 0 6px 20px #AFAFAF
	position relative
	.Contenedor-caja
		position relative
		margin 0
		padding 0
		width 400px
		top 5%
		left 5%
		display inline-block
		img
			width 100%
			height 100%
	
.FrasesMotivacion
	background-color azulBanner
	font-size 1.2em
	position: relative;
	top: -10px;
	padding-top: 2em;
	&-item
		margin 0
	&-titulo
		color white
		font-style italic
		font-weight: lighter;
		text-align center
	&-author
		color white
		font-style italic
		font-weight: normal;
		text-align right
.Contenedor-noticias
	position relative
	background-color azulClaro           
	.Contenedor-mujer
		position relative
		width 100%
		top -1.2em
		.Contenedor-mujerc
			display inline-block
			margin 0
			padding 0
			width 100%
			.Contenedor-mujercImg
				width 100%
		.Contenedor-caja
			position absolute
			margin 0
			padding 0
			width 320px
			top 0
			left 0
			.Contenedor-cajaImg
				width 100%
	.SliderSecundario
		text-align center
		&-item
			background: #fff;
			padding: 1em;
			top: 22px;
			position: relative;
			height: 463px;
			text-align: center;
			width: 330px;
			display inline-block
			margin-bottom 4em
			text-align left
			figure
				margin: 0
				position: relative
				display: inline-block;
				top: -52px;
				width: 325px;
				img
					width 100%
					height 100%
		&-titulo
			color azulPrincipal
			line-height 0.9em
		&-p
			font-size 1.3em
		&-link
			color azulBanner
			text-decoration none
			font-weight bold
			position absolute
			bottom 1em
			right 1em
.Footer
	background-color azulSemiClaro
	&-logo
		margin 0
		padding 0
		width 150px
		&Img
			width 100%
@media screen and (min-width:932px)
	.ContenedorPrincipal
		&-logo
			top: 2em;
			&Img
				display inline-block
				width 220px
		&-menu
			position: absolute;
			text-align: center;
			display: block;
			right: 0;
			padding: 0;
			background: none;
			width: 508px;
			height: auto;
			-o-transition: all 1s ease-in-out;
			-ms-transition: all 1s ease-in-out;
			-moz-transition: all 1s ease-in-out;
			-webkit-transition: all 1s ease-in-out;
			transition: all 1s ease-in-out;
			top: 70px;
			z-index: 5;
			font-weight: bold;
			&Ul
				position absolute
			&Item
				margin 0
				float: left;
				border-left none
				a
					padding-left: 1.3em;
					padding-right: 1.3em;
					transition all 0.5s ease-in-out
					&:hover
						color azulBanner
						
					
		&-banner
			width 100%
			position absolute
			left 0
			bottom 0
			z-index 1
			text-align right
		&-bannerlema
			display inline-block
			margin-right: 3em;
			img
				border: 0;
				width: 100%;
				max-width 500px	
		.menu-movil
			display none
	
			
@media screen and (max-width:400px)
	.SliderSecundario
		&-item
			width: 100% !important;
			padding 0 !important
			top 92px !important
			margin-bottom 8em !important
			text-align center !important
			figure
				width: 100% !important;
				

	
			
		
		
		
    		
		
			
			
			
		
